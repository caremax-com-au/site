<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StoreFrontGridWithEightProductsRelatedProductRuleTest">
        <annotations>
            <title value="Check display Related Product Rule Block With Eight Products In Grid" />
            <description value="Check display Related Product Rule Block With Eight Products In Grid" />
            <testCaseId value="ARP-7" />
            <severity value="CRITICAL" />
            <group value="MostViewed" />
            <group value="MostViewedSmoke" />
        </annotations>
        <!-- Create sample data -->
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin" />
            <createData entity="SubCategory" stepKey="createCategory" />
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct2">
                <requiredEntity createDataKey="createCategory" />
            </createData>
            <magentoCLI command="cache:clean" stepKey="cacheClean" />
        </before>
        <!-- Delete sample data -->
        <after>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory" />
            <deleteData createDataKey="createSimpleProduct2" stepKey="deleteSimpleProduct2" />
            <magentoCLI command="cache:clean" stepKey="cacheClean" />
            <actionGroup ref="logout" stepKey="logout" />
        </after>
        <!-- Create Related Product Rule -->
        <actionGroup ref="AdminAmastyCreateRelatedProductRuleActionGroup" stepKey="goToRulesGrid">
            <argument name="am_test_rule" value="TestRelatedProductRule1" />
        </actionGroup>
        <!-- Check Grid With Eight Products Related Products Block on StoreFront -->
        <actionGroup ref="StoreFrontAmastyCheckRelatedProductRulesGridWithEightProductsActionGroup" stepKey="goToProductPage1">
            <argument name="am_test_rule" value="TestRelatedProductRule1" />
            <argument name="product2" value="$$createSimpleProduct2.product[sku]$$" />
        </actionGroup>
        <!-- Delete Related Product Rule -->
        <actionGroup ref="AdminAmastyDeleteRelatedProductRuleActionGroup" stepKey="goToRulesGridForDelete">
            <argument name="am_test_rule" value="TestRelatedProductRule1" />
        </actionGroup>
    </test>
</tests>