              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AmastyShowNoteOnCategoryCLIActionGroup">
        <arguments>
            <argument name="showNoteOnCategory" type="string" defaultValue="0"/>
        </arguments>
        <magentoCLI command="config:set {{AmastyPreOrderCLIData.show_note_on_category_page}} {{showNoteOnCategory}}"
                    stepKey="enableNoteOnCategory"/>
    </actionGroup>
</actionGroups>
