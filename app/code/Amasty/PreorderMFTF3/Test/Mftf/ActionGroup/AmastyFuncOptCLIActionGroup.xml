<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AmastyFuncOptCLIActionGroup">
        <arguments>
            <argument name="moduleStatus" type="string" defaultValue="1"/>
            <argument name="allowNegativeQTy" type="string" defaultValue="0"/>
            <argument name="disablePositiveQTy" type="string" defaultValue="0"/>
        </arguments>
        <magentoCLI command="config:set {{AmastyPreOrderCLIData.module_status}} {{moduleStatus}}" stepKey="moduleStatusSwitch"/>
        <magentoCLI command="config:set {{AmastyPreOrderCLIData.allow_for_zero_and_below}} {{allowNegativeQTy}}" stepKey="enableForLessThanZeroSwitch"/>
        <magentoCLI command="config:set {{AmastyPreOrderCLIData.disable_for_positive_qty}} {{disablePositiveQTy}}" stepKey="disableForPositiveQTySwitch"/>
    </actionGroup>
</actionGroups>
